---
import Container from "./Container.astro";

import { Image } from "astro:assets";

interface Props {
  preTitle: string;
  title: string;
  description: string;
  image: string;
  imageAlt: string;
  cta?: {
    target?: string;
    text: string;
    url: string;
  };
}

const { preTitle, title, description, cta, image, imageAlt } = Astro.props;
---

<div class="relative" id="home">
  <div
    aria-hidden="true"
    class="absolute inset-0 grid grid-cols-2 -space-x-52 opacity-40 dark:opacity-20"
  >
    <div
      class="blur-[106px] h-56 bg-gradient-to-br from-primary to-stone-400 dark:from-blue-700"
    >
    </div>
    <div
      class="blur-[106px] h-32 bg-gradient-to-r from-fuchsia-400 to-primary dark:to-indigo-600"
    >
    </div>
  </div>
  <Container>
    <div class="relative pt-28 ml-auto">
      <div class="grid grid-cols-1 md:grid-cols-2">
        <div class="text-left mx-auto pr-6">
          <p
            class="text-gray-900 dark:text-white font-bold text-3xl md:text-5xl xl:text-6xl"
            set:html={preTitle}
          />
          <h1 class="text-3xl mt-3 text-gray-900 dark:text-white">{title}</h1>
          <p class="mt-8 text-gray-700 dark:text-gray-300">
            {description}
          </p>
          {
            cta && (
              <div class="mt-16 flex flex-wrap justify-center gap-y-4 gap-x-6">
                <a
                  href={cta.url}
                  target={cta.target}
                  class="relative flex h-11 w-full items-center justify-center px-6 before:absolute before:inset-0 before:rounded-full before:bg-primary before:transition before:duration-300 hover:before:scale-105 active:duration-75 active:before:scale-95 sm:w-max"
                >
                  <span class="relative text-base font-semibold text-white">
                    {cta.text}
                  </span>
                </a>
              </div>
            )
          }
        </div>

        <div class="mt-8">
          <Image
            src={image}
            alt={imageAlt}
            class="max-w-full shadow rounded-lg shadow-2xl p-4 bg-white"
            width={500}
            height={500}
          />
        </div>
      </div>
    </div>
  </Container>
</div>
