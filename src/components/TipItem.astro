---
import { Image } from "astro:assets";
import items from "~/data/dermapen/items";
import type TipInterface from "~/interfaces/tip.interface";
interface Props {
  item: TipInterface;
}

const { item } = Astro.props;
const itemUrl = `/consejos/${item.slug}/`;
---

<article class="flex flex-col shadow my-4">
  <!-- Article Image -->
  <a href={itemUrl} class="hover:opacity-75">
    <Image
      src={item.data.image}
      width={700}
      height={400}
      alt={item.data.imageAlt}
    />
  </a>
  <div class="bg-white dark:bg-gray-800 flex flex-col justify-start p-6">
    <span class="text-blue-700 text-sm font-bold uppercase pb-4">
      {
        Array.isArray(item.data.tags) &&
          item.data.tags.map((tag) => <span class="mr-2">{tag}</span>)
      }
    </span>

    <a
      href={itemUrl}
      class="text-3xl font-bold hover:text-gray-700 pb-4 text-gray-900 dark:text-gray-100 dark:hover:text-white"
      >{item.data.title}
    </a>

    <a
      href="#"
      class="pb-6 text-gray-900 dark:text-gray-100 dark:hover:text-white"
      >{item.data.description}</a
    >
    <div class="text-right">
      <a
        href={itemUrl}
        class="uppercase hover:text-gray-100 bg-orange-600 text-white font-bold py-2 px-4"
        >Leer m√°s</a
      >
    </div>
  </div>
</article>
