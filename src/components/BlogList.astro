---
import BlogListItem from "./BlogListItem.astro";
import H2 from "./typograpy/H2.astro";
import type PostInterface from "~/interfaces/post.interface";

interface Props {
  title: string;
  baseUrl: string;
  posts: Partial<PostInterface>[];
}
const title = Astro.props.title;
const posts = Astro.props.posts;
const baseUrl = Astro.props.baseUrl;
---

<div class="py-4 mx-auto max-w-screen-xl">
  <H2>
    {title}
  </H2>
  <div class="grid gap-12 sm:grid-cols-3 lg:grid-cols-3 mt-5">
    {posts.map((post) => <BlogListItem item={post} baseUrl={baseUrl} />)}
  </div>
</div>
