---
import type ItemInterface from "~/interfaces/item.interface";
interface Props {
  item: ItemInterface;
}

const item = Astro.props.item;
---

<div class="group relative">
  <div
    class="aspect-auto w-full overflow-hidden rounded-md bg-gray-200 dark:bg-gray-900 lg:aspect-none group-hover:opacity-75 lg:h-80"
  >
    <img
      src={item.image}
      alt={item.excerpt}
      class="h-full w-full object-cover object-center lg:h-full lg:w-full"
    />
  </div>
  <div class="mt-4 flex items-center justify-center flex-col">
    <div>
      <h3 class="text-gray-700 dark:text-gray-100 text-xl mb-3">
        <a href={item.slug}>
          <span aria-hidden="true" class="absolute inset-0"></span>
          {item.title}
        </a>
      </h3>
    </div>
    <p class="text-sm font-medium text-gray-900">
      <!-- buy button -->
      <a
        href={item.url}
        target="_blank"
        type="button"
        class="bg-orange-300 text-gray-900 font-bold py-4 px-6 rounded text-xl"
      >
        Comprar
      </a>
    </p>
  </div>
</div>
