---
interface Props {
  href?: string;
  target?: string;
  type?: string;
  class?: string;
}

const { href, target, type, class: className } = Astro.props;
---

<a
  href={href}
  target={target}
  type={type}
  class={`bg-orange-500 hover:bg-orange-600 text-white font-bold py-4 px-6 rounded text-xl ${className}`}
>
  <slot />
</a>
