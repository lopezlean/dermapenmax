---
import ProductInformationInterface from "~/interfaces/product-information.interface";
import Container from "./Container.astro";
import ProductInformationItem from "./ProductInformationItem.astro";
import H2 from "./typograpy/H2.astro";

interface Props {
  items: ProductInformationInterface[];
  title: string;
}

const { items, title } = Astro.props;
---

<div class="mt-10">
  <Container>
    <H2>{title}</H2>
    <div class="bg-white dark:bg-gray-900">
      <div
        class="mx-auto max-w-2xl px-4 py-16 sm:px-6 sm:py-24 lg:max-w-7xl lg:px-8"
      >
        <div
          class="mt-6 grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-8 justify-center"
        >
          {
            items.map(
              (item) =>
                item.main_image && <ProductInformationItem item={item} />
            )
          }
        </div>
      </div>
    </div>
  </Container>
</div>
